<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/arrow_reset_pass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ripple_effect"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_go_back_left_arrow_"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:background="#bf000000"
       >
        <TextView
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/segoeui"
            android:text="Reset Password"
            android:paddingBottom="15dp"
            android:textColor="#fff"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tocnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"

            android:textStyle="bold"
            android:fontFamily="@font/segoeui"
            android:text="To continue with FarmPe"
            android:textColor="#8c8c8c"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/border_empty"
            >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwd_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:textColorHint="#8c8c8c"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#8c8c8c"
            app:theme="@style/MyStyle"
            android:paddingHorizontal="10dp"
            app:hintEnabled="true"
            app:hintAnimationEnabled="false">


            <EditText
                android:id="@+id/passwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:fontFamily="@font/segoeui"
                android:gravity="center|left"
                android:hint="Enter New Password"
                android:maxLength="12"
                android:paddingTop="5dp"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#8c8c8c"
                android:textColorHint="#8c8c8c"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="15dp"
                android:textStyle="normal"
                 />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/border_empty"
            >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/conf_pass_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#8c8c8c"
            app:theme="@style/MyStyle"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/segoeui"
            android:textColorHint="#8c8c8c"
            app:hintEnabled="true"
            app:hintAnimationEnabled="false">





            <EditText
                android:id="@+id/conf_pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLength="12"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="20dp"
                android:textColor="#8c8c8c"
                android:textColorHint="#8c8c8c"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="15dp"
                android:textStyle="normal"
                android:gravity="center|left"
                 />


        </android.support.design.widget.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/password_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:gravity="center"
                android:background="@drawable/border_filled_red"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:fontFamily="@font/segoeui"
                android:text="SUBMIT"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="vertical"

        android:gravity="start">

    </LinearLayout>

</LinearLayout>



