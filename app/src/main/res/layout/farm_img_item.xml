                android:textSize="14dp"
                />-->
            <TextView
                android:id="@+id/farmer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_gravity="left"
                android:text="Farmer Name"
                android:layout_marginTop="10dp"
                android:textColor="#8c8c8c"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="Rampura, Bahjoi"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:textColor="#8c8c8c"
                android:textSize="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="100"
                >

                <LinearLayout
                    android:id="@+id/shortlist_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/short_list_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_weight="30"
                android:text="Shortlist"
                android:layout_marginBottom="10dp"
                android:paddingTop="6dp"
                android:layout_marginLeft="10dp"
                android:textColor="#8c8c8c"
                android:textSize="14dp"
                android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:gravity="right">

                <TextView
                    android:id="@+id/connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"

                    android:text="CONNECT"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_red"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="right"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_air_conditioner"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

