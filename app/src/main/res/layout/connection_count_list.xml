<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="100"
    android:tag="cards main container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_effect"
            >


            <ImageView
                android:id="@+id/b_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close_black"
                style="@style/SelectableItemBackground"
                android:background="?attr/selectableItemBackgroundBorderless"

                />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/conn_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#064a8e"
            android:fontFamily="@font/segoeui"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Connections"
                android:textSize="18dp"
                android:textColor="#555555"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                />


            
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Personal Contacts"
                android:textSize="18dp"
                android:textColor="#555555"
                android:fontFamily="@font/segoeui"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:layout_marginHorizontal="30dp"
                android:padding="15dp"
                android:hint="9999999999"
                android:textColor="#555555"
                android:maxLength="10"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="20dp"
                />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="CONTINUE"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#fff"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_filled_red"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/invite_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#555555"
            android:fontFamily="@font/segoeui"
            />



    </LinearLayout>







</LinearLayout>




