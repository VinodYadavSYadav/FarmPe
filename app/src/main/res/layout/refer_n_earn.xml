<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <LinearLayout
                    android:id="@+id/back_feed"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    >


                    <ImageView
                        android:id="@+id/b_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/go_back_left_arrow"
                        style="@style/SelectableItemBackground"
                        android:background="?attr/selectableItemBackgroundBorderless"

                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refer a Friend"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:id="@+id/toolbar_title" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">



                    <TextView
                        android:id="@+id/wallet_blnctxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet Balance : "
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:id="@+id/wallet_blnc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#fff"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/refer"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/winup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Win up to Rs. 1,000"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/getscratch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="@string/Refer_text"
                    android:layout_marginHorizontal="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/refer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Referer Code"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp" />


                <!-- <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Invite"
                     android:textSize="16dp"
                     android:textColor="#fff"
                     android:background="@drawable/border_filled_pink_round"
                     android:paddingVertical="20dp"
                     android:gravity="center"
                     android:layout_marginVertical="20dp"
                     android:paddingHorizontal="20dp"
                     android:layout_marginTop="10dp"
                     android:layout_marginHorizontal="20dp"
                     />


     -->
                <TextView
                    android:id="@+id/invite_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Invite now"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="100"
                    android:layout_marginBottom="10dp"
                    >

                    <LinearLayout
                        android:id="@+id/whatsapp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/whatsapp_icon"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="Whatsapp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/facebook"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_facebook"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="Facebook"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/insta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/insta"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="Instagram"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/twitter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_twitter"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:gravity="center"
                            android:text="Twitter"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/more"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_more_icon"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:text="More"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
