<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinate_layout"
    xmlns:tools="http://schemas.android.com/tools">

   <!-- <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll">
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_account">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:weightSum="100"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:weightSum="100"
                    >
                    <LinearLayout
                        android:id="@+id/looking_for"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="35">
                        <TextView
                            android:id="@+id/looking_for1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_horizontal"
                            android:text="Looking for"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <View
                            android:id="@+id/looking_view"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:background="#FFF83628"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="35dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/farms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="30">

                        <TextView
                            android:id="@+id/farms1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_horizontal"
                            android:text="Farms"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="14dp" />

                        <View
                            android:id="@+id/farms_view"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:background="#FFF83628"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="45dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/farmer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/farmer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_horizontal"
                            android:text="Farmer"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <View
                            android:id="@+id/farmer_view"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="42dp"
                            android:background="#FFF83628" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frame_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:background="#000"/>


            </LinearLayout>

        </LinearLayout>

<!--
    </android.support.v4.widget.NestedScrollView>
-->
</android.support.design.widget.CoordinatorLayout>