<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/left_arow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ripple_effect"
            >

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_go_back_left_arrow_"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="55"
        android:background="#bf000000"
        android:orientation="vertical"
        android:paddingVertical="10dp">


        <TextView
            android:id="@+id/thank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:padding="10dp"
            android:text=" One Time Password"
            android:textColor="#fff"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/thanktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/segoeui"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="@string/enterotp"
            android:textColor="#8c8c8c"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/border_empty"
            android:cursorVisible="true"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLength="6"
            android:paddingVertical="20dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#8c8c8c"
            android:textColorHint="#8c8c8c"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >


            <TextView
                android:id="@+id/otp_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/border_filled_red"
                android:fontFamily="@font/segoeui"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:text="CONFIRM OTP"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/segoeui"
            android:paddingVertical="5dp"
            android:text="Resend"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:textSize="14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="25"
        android:layout_marginHorizontal="10dp"
        >

    </LinearLayout>

</LinearLayout>









