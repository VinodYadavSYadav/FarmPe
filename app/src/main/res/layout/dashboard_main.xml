<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinate_layout"
    xmlns:tools="http://schemas.android.com/tools">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:id="@+id/lay_account">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:background="#fff"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:paddingVertical="10dp"
                android:paddingHorizontal="5dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/looking_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                <TextView
                    android:id="@+id/looking_for1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/border_empty_curve"
                    android:text="Farmer requests"
                    android:textColor="#333333"
                    />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/farms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/farms1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_empty_curve"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:text="Farms"
                        android:textColor="#333333" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/farmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/farmer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"                        android:background="@drawable/border_empty_curve"
                        android:text="Farmers"
                        android:textColor="#333333"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/people1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"                        android:background="@drawable/border_empty_curve"
                        android:text="People"
                        android:textColor="#333333"
                        />

                </LinearLayout>



            </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/select_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA "
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Sort by"
                    android:textSize="14dp"

                    android:textColor="#000"

                    />


                <TextView
                    android:id="@+id/new_address"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="Recently added"
                    android:textSize="14dp"

                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#000"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_filter"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <FrameLayout
                android:id="@+id/frame_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />

            </LinearLayout>
        </LinearLayout>


</LinearLayout>