<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/arrow_thank_u"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ripple_effect"
            >

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_go_back_left_arrow_"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="45"
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >

    <TextView
        android:id="@+id/thank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/segoeui"
        android:text=" One Time Password"
        android:gravity="center"
        android:textColor="#161823"
        android:textSize="18dp"
        />


    <TextView
        android:id="@+id/thanktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:gravity="center"

        android:fontFamily="@font/segoeui"
        android:text="@string/thankpage"
        android:textColor="#8a8b91"
        android:textSize="12dp"
        />

    <EditText
        android:id="@+id/otp_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:background="@drawable/border_empty"
        android:cursorVisible="true"
        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:hint="Enter OTP"
        android:inputType="number"
        android:maxLength="6"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#21232d"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/thanktu_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="CONFIRM OTP"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:background="@drawable/border_filled_pink"
            android:fontFamily="@font/segoeui"
            android:padding="15dp"
            android:textColor="#fff"
            />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="35"
        android:layout_marginHorizontal="10dp"
        >

    </LinearLayout>


</LinearLayout>









